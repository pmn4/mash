@model IEnumerable<MashViewModel>
@{
    ViewBag.Title = "Debug";
}
<!DOCTYPE html>
<html>
	<head>
		<title>@(ViewBag.Title ?? "*mash")</title>
		<link rel="stylesheet" href="/Content/styles/mash.css" />
	</head>
	<body class="debug">

		<table width="100%">
			<thead>
				<tr>
					<th colspan="3">Media A</th>
					<th colspan="3">Media B</th>
				</tr>
				<tr>
					<th>Url</th>
					<th>Rating</th>
					<th>New Rating</th>
					<th>Url</th>
					<th>Rating</th>
					<th>New Rating</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var m in Model)
				{
					var a = m.Media.ElementAt(0);
					var b = m.Media.ElementAt(1);
					<tr>
						<td class="@(m.ChoiceMediaId == a.MediaId ? "winning" : "losing")">@a.Url</td>
						<td class="@(m.ChoiceMediaId == a.MediaId ? "winning" : "losing")">@a.CurrentRating</td>
						<td class="@(m.ChoiceMediaId == a.MediaId ? "winning" : "losing")">@a.Rating</td>
						<td class="@(m.ChoiceMediaId == b.MediaId ? "winning" : "losing")">@b.Url</td>
						<td class="@(m.ChoiceMediaId == b.MediaId ? "winning" : "losing")">@b.CurrentRating</td>
						<td class="@(m.ChoiceMediaId == b.MediaId ? "winning" : "losing")">@b.Rating</td>
					</tr>
				}
			</tbody>
		</table>
	</body>
</html>
